<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpMeActivity"
    tools:layout_editor_absoluteY="25dp"
    android:background="@drawable/help_background">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.design.widget.AppBarLayout>


    <CheckBox
        android:id="@+id/phone_cb"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginLeft="172dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="200dp"
        android:onClick="changeCatergory"
        android:text="טלפון"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appBarLayout" />

    <CheckBox
        android:id="@+id/tv_cb"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:onClick="changeCatergory"
        android:text="טלוויזיה"
        app:layout_constraintEnd_toStartOf="@+id/phone_cb"
        app:layout_constraintTop_toTopOf="@+id/phone_cb" />

    <CheckBox
        android:id="@+id/other_cb"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginTop="50dp"
        android:onClick="changeCatergory"
        android:text="אחר"
        app:layout_constraintStart_toStartOf="@+id/tv_cb"
        app:layout_constraintTop_toBottomOf="@+id/tv_cb" />


    <CheckBox
        android:id="@+id/ac_cb"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:onClick="changeCatergory"
        android:text="מזגן"
        app:layout_constraintStart_toEndOf="@+id/phone_cb"
        app:layout_constraintTop_toTopOf="@+id/phone_cb" />

    <CheckBox
        android:id="@+id/pc_cb"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:onClick="changeCatergory"
        android:text="מחשב"
        app:layout_constraintStart_toStartOf="@+id/ac_cb"
        app:layout_constraintTop_toTopOf="@+id/wm_cb" />

    <CheckBox
        android:id="@+id/wm_cb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="changeCatergory"
        android:text="מכונת כביסה"
        app:layout_constraintStart_toStartOf="@+id/phone_cb"
        app:layout_constraintTop_toTopOf="@+id/other_cb" />

    <Button
        android:id="@+id/button2"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginBottom="100dp"
        android:background="@android:color/transparent"
        android:onClick="helpMe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>