<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Helper"
    tools:layout_editor_absoluteY="25dp">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <Button
        android:id="@+id/helpme_button"
        android:layout_width="234dp"
        android:layout_height="231dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:onClick="helpMe"
        android:text="תעזור לי"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        tools:layout_editor_absoluteX="82dp" />

    <CheckBox
        android:id="@+id/phone_cb"
        android:layout_width="93dp"
        android:layout_height="41dp"
        android:layout_marginTop="32dp"
        android:onClick="changeCatergory"
        android:text="טלפון"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintTop_toBottomOf="@+id/helpme_button"
        tools:layout_editor_absoluteX="82dp" />

    <CheckBox
        android:id="@+id/tv_cb"
        android:layout_width="93dp"
        android:layout_height="41dp"
        android:layout_marginTop="32dp"
        android:text="טלוויזיה"
        app:layout_constraintStart_toStartOf="@+id/phone_cb"
        app:layout_constraintTop_toBottomOf="@+id/phone_cb" />

    <CheckBox
        android:id="@+id/other_cb"
        android:layout_width="94dp"
        android:layout_height="33dp"
        android:layout_marginTop="32dp"
        android:onClick="changeCatergory"
        android:text="אחר"
        app:layout_constraintStart_toStartOf="@+id/tv_cb"
        app:layout_constraintTop_toBottomOf="@+id/tv_cb" />


    <CheckBox
        android:id="@+id/ac_cb"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:text="מזגן"
        app:layout_constraintTop_toTopOf="@+id/phone_cb"
        tools:layout_editor_absoluteX="223dp" />

    <CheckBox
        android:id="@+id/pc_cb"
        android:layout_width="93dp"
        android:layout_height="33dp"
        android:text="מחשב"
        app:layout_constraintStart_toStartOf="@+id/ac_cb"
        app:layout_constraintTop_toTopOf="@+id/tv_cb" />

    <CheckBox
        android:id="@+id/wm_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מכונת כביסה"
        app:layout_constraintStart_toStartOf="@+id/pc_cb"
        app:layout_constraintTop_toTopOf="@+id/other_cb" />


</android.support.constraint.ConstraintLayout>