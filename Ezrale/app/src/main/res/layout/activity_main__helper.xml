<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpMeActivity"
    tools:layout_editor_absoluteY="25dp">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <CheckBox
        android:id="@+id/phone_cb"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginEnd="48dp"
        android:layout_marginLeft="82dp"
        android:layout_marginRight="48dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="60dp"
        android:onClick="changeCatergory"
        android:text="טלפון"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintEnd_toStartOf="@+id/ac_cb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <CheckBox
        android:id="@+id/tv_cb"
        android:layout_width="93dp"
        android:layout_height="41dp"
        android:layout_marginTop="32dp"
        android:text="טלוויזיה"
        android:onClick="changeCatergory"
        app:layout_constraintStart_toStartOf="@+id/phone_cb"
        app:layout_constraintTop_toBottomOf="@+id/phone_cb" />

    <CheckBox
        android:id="@+id/other_cb"
        android:layout_width="94dp"
        android:layout_height="33dp"
        android:layout_marginTop="32dp"
        android:onClick="changeCatergory"
        android:text="אחר"
        app:layout_constraintStart_toStartOf="@+id/tv_cb"
        app:layout_constraintTop_toBottomOf="@+id/tv_cb" />


    <CheckBox
        android:id="@+id/ac_cb"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:text="מזגן"
        android:onClick="changeCatergory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/phone_cb"
        app:layout_constraintTop_toTopOf="@+id/phone_cb" />

    <CheckBox
        android:id="@+id/pc_cb"
        android:layout_width="93dp"
        android:layout_height="33dp"
        android:text="מחשב"
        android:onClick="changeCatergory"
        app:layout_constraintStart_toStartOf="@+id/ac_cb"
        app:layout_constraintTop_toTopOf="@+id/tv_cb" />

    <CheckBox
        android:id="@+id/wm_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מכונת כביסה"
        android:onClick="changeCatergory"
        app:layout_constraintStart_toStartOf="@+id/pc_cb"
        app:layout_constraintTop_toTopOf="@+id/other_cb" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="במה אפשר לעזור?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <Button
        android:id="@+id/button2"
        android:layout_width="147dp"
        android:layout_height="142dp"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="120dp"
        android:text="עזור לי!"
        android:onClick="helpMe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/other_cb" />


</android.support.constraint.ConstraintLayout>