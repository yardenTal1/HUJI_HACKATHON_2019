<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2" />

    <TextView
        android:id="@+id/textPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="טלפון"
        app:layout_constraintBottom_toBottomOf="@+id/phoneNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/phoneNum" />

    <TextView
        android:id="@+id/textWhatHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="36dp"
        android:text="במה תוכל לעזור?"
        app:layout_constraintEnd_toEndOf="@+id/phoneNum"
        app:layout_constraintTop_toBottomOf="@+id/textPhone" />

    <CheckBox
        android:id="@+id/phone_cb"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginLeft="172dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="80dp"
        android:onClick="changeCatergory"
        android:text="טלפון"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWhatHelp" />

    <CheckBox
        android:id="@+id/tv_cb"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:onClick="changeCatergory"
        android:text="טלוויזיה"
        app:layout_constraintEnd_toStartOf="@+id/phone_cb"
        app:layout_constraintTop_toTopOf="@+id/phone_cb" />

    <CheckBox
        android:id="@+id/other_cb"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginTop="50dp"
        android:onClick="changeCatergory"
        android:text="אחר"
        app:layout_constraintStart_toStartOf="@+id/tv_cb"
        app:layout_constraintTop_toBottomOf="@+id/tv_cb" />


    <CheckBox
        android:id="@+id/ac_cb"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:onClick="changeCatergory"
        android:text="מזגן"
        app:layout_constraintStart_toEndOf="@+id/phone_cb"
        app:layout_constraintTop_toTopOf="@+id/phone_cb" />

    <CheckBox
        android:id="@+id/pc_cb"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:onClick="changeCatergory"
        android:text="מחשב"
        app:layout_constraintStart_toStartOf="@+id/ac_cb"
        app:layout_constraintTop_toTopOf="@+id/wm_cb" />

    <CheckBox
        android:id="@+id/wm_cb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="changeCatergory"
        android:text="מכונת כביסה"
        app:layout_constraintStart_toStartOf="@+id/phone_cb"
        app:layout_constraintTop_toTopOf="@+id/other_cb" />


    <Button
        android:id="@+id/register_button"
        android:layout_width="145dp"
        android:layout_height="71dp"
        android:layout_marginTop="104dp"
        android:onClick="registerHelper"
        android:text="הצטרף לקהילה!"
        app:layout_constraintEnd_toEndOf="@+id/wm_cb"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintStart_toStartOf="@+id/other_cb"
        app:layout_constraintTop_toBottomOf="@+id/other_cb" />


</android.support.constraint.ConstraintLayout>